<Window x:Class="Powitanie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Powitanie"
        mc:Ignorable="d"
        x:Name="Win"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0"
                Background="Beige"
                Height="100"
                Width="300"
                Foreground="Brown"
                FontSize="30" Click="Button_Click" 
                >
            Start
        </Button>

        <Button Grid.Row="1" 
                Content="Czas"
                Margin="50 40 50 80"
                Padding="20"
                FontSize="30"
                Name="Czas_button" MouseEnter="Czas_button_MouseEnter" MouseLeave="Czas_button_MouseLeave">
        </Button>

    </Grid>
</Window>
